@model BTL.Models.Payment
@{
    ViewData["Title"] = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="food_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>Chi Tiết Thanh Toán</h2>
        </div>

        <div class="payment-container">
            <form asp-action="Payment" method="post">
                <div class="row">
                    <!-- Billing Address Column -->
                    <div class="col-md-6">
                        <div class="payment-box">
                            <h4>Địa Chỉ Thanh Toán</h4>
                            <div class="form-group" style="display: none">
                                <input asp-for="UserId" class="form-control" />
                                <input asp-for="ToTalBill" class="form-control" />
                                <input asp-for="PaymentMode" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>Họ Tên</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Địa Chỉ Giao Hàng</label>
                                <input asp-for="Address" class="form-control" placeholder="Số nhà - Đường - Khu vực" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Phương thức thanh toán</label>
                                <div class="payment-methods">
                                    <div class="payment-method">
                                        <input type="radio" id="online" name="PaymentMode" value="Online" checked>
                                        <label for="online">Thanh toán online</label>
                                    </div>
                                    <div class="payment-method">
                                        <input type="radio" id="cod" name="PaymentMode" value="COD">
                                        <label for="cod">Thanh toán khi nhận hàng</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Payment Details Column -->
                    <div class="col-md-6">
                        <div class="payment-box">
                            <div id="cardPaymentSection">
                                <h4>Thông Tin Thẻ</h4>
                                
                                <div class="accepted-cards">
                                    <label>Chúng tôi chấp nhận:</label>
                                    <div class="card-images">
                                        <img src="~/Payment/images/card_img.png" alt="Accepted Cards">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Số Thẻ</label>
                                    <input asp-for="CardNo" class="form-control" placeholder="1111-2222-3333-4444" />
                                    <span asp-validation-for="CardNo" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Ngày Hết Hạn</label>
                                            <input asp-for="ExpiryDate" class="form-control" placeholder="MM/YY" />
                                            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Mã CVV</label>
                                            <input asp-for="CvvNo" class="form-control" placeholder="123" />
                                            <span asp-validation-for="CvvNo" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Order Summary - Luôn hiển thị -->
                            <div class="order-summary">
                                <h5>Tóm Tắt Đơn Hàng</h5>
                                <div id="cart-items-summary">
                                    @foreach (var item in ViewBag.CartItems)
                                    {
                                        <div class="summary-item">
                                            <span>@item.Name x @item.Quantity</span>
                                            <span>@String.Format("{0:0,0}", item.Subtotal) ₫</span>
                                        </div>
                                    }
                                </div>
                                <div class="summary-item">
                                    <span>Tạm tính:</span>
                                    <span><span id="subtotal">@String.Format("{0:0,0}", ViewBag.Subtotal)</span> ₫</span>
                                </div>
                                <div class="summary-item">
                                    <span>Phí vận chuyển:</span>
                                    <span><span id="shipping">@String.Format("{0:0,0}", ViewBag.ShippingFee)</span> ₫</span>
                                </div>
                                <div class="summary-item total">
                                    <span>Tổng cộng:</span>
                                    <span><span id="total">@String.Format("{0:0,0}", ViewBag.TotalAmount)</span> ₫</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Submit Buttons -->
                <div class="button-container text-center mt-4">
                    <button type="submit" class="btn-order">
                        <span>
                            Xác Nhận Thanh Toán
                            <i class="fa fa-credit-card ml-2"></i>
                        </span>
                    </button>
                    <a asp-action="Index" class="btn-cancel">
                        <span>
                            Trở Về Trang Chủ
                            <i class="fa fa-home ml-2"></i>
                        </span>
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>

<style>
    .payment-container {
        padding: 30px 0;
    }

    .payment-box {
        background: #ffffff;
        padding: 25px;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
        margin-bottom: 20px;
    }

    .payment-box h4 {
        color: #222831;
        margin-bottom: 20px;
        font-weight: 600;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        color: #222831;
        font-weight: 500;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        height: 45px;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 8px 15px;
        font-size: 14px;
    }

    .accepted-cards {
        margin: 20px 0;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background: #fff;
        text-align: center;
    }

    .accepted-cards label {
        display: block;
        margin-bottom: 10px;
        color: #222831;
        font-weight: 500;
    }

    .card-images {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card-images img {
        max-width: 100%;
        height: auto;
        object-fit: contain;
    }

    #cart-items-summary {
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 1px dashed #ddd;
    }

    #cart-items-summary .summary-item {
        color: #666;
        font-size: 0.9em;
        margin-bottom: 8px;
    }

    .summary-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
        color: #666;
    }

    .summary-item.total {
        border-top: 1px solid #ddd;
        padding-top: 10px;
        margin-top: 10px;
        font-weight: 600;
        color: #222831;
        font-size: 1.1em;
    }

    .order-summary {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 25px;
    }

    .order-summary h5 {
        color: #222831;
        margin-bottom: 15px;
        font-weight: 600;
    }

    #cart-items-summary {
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 1px dashed #ddd;
    }

    .summary-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
        color: #666;
    }

    .summary-item.total {
        border-top: 1px solid #ddd;
        padding-top: 10px;
        margin-top: 10px;
        font-weight: 600;
        color: #222831;
        font-size: 1.1em;
    }

    .button-container {
        margin: 30px 0;
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .btn-order, .btn-cancel {
        display: inline-block;
        padding: 12px 35px;
        border-radius: 45px;
        font-size: 15px;
        text-transform: uppercase;
        font-weight: 600;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
        text-decoration: none;
    }

    .btn-order {
        background-color: #ffbe33;
        color: #ffffff;
    }

    .btn-order:hover {
        background-color: #e69c00;
        color: #ffffff;
        text-decoration: none;
    }

    .btn-cancel {
        background-color: #222831;
        color: #ffffff;
    }

    .btn-cancel:hover {
        background-color: #1a1f25;
        color: #ffffff;
        text-decoration: none;
    }

    .btn-order span, .btn-cancel span {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-order i, .btn-cancel i {
        margin-left: 8px;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .button-container {
            flex-direction: column;
            align-items: center;
        }

        .btn-order, .btn-cancel {
            width: 100%;
            max-width: 300px;
            margin: 5px 0;
        }
    }

    .payment-methods {
        display: flex;
        gap: 20px;
        margin-top: 10px;
    }

    .payment-method {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .payment-method input[type="radio"] {
        margin: 0;
    }

    .payment-method label {
        margin: 0;
        cursor: pointer;
    }
</style>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function() {
            // Hàm xử lý ẩn/hiện phần thanh toán thẻ
            function toggleCardPaymentSection() {
                const paymentMode = $('input[name="PaymentMode"]:checked').val();
                if (paymentMode === 'COD') {
                    $('#cardPaymentSection').hide();
                    // Clear card input values when switching to COD
                    $('#CardNo').val('');
                    $('#ExpiryDate').val('');
                    $('#CvvNo').val('');
                } else {
                    $('#cardPaymentSection').show();
                }
            }

            // Gọi hàm khi trang load
            toggleCardPaymentSection();

            // Gọi hàm khi thay đổi phương thức thanh toán
            $('input[name="PaymentMode"]').change(function() {
                toggleCardPaymentSection();
            });

            // Update form submit handler
            $('form').on('submit', function(e) {
                e.preventDefault();

                const paymentMode = $('input[name="PaymentMode"]:checked').val();
                
                // Chỉ validate thông tin thẻ khi thanh toán online
                if (paymentMode === 'Online') {
                    const cardNo = $('#CardNo').val();
                    const expiryDate = $('#ExpiryDate').val();
                    const cvv = $('#CvvNo').val();

                    // Validate card information
                    if (!/^\d{16}$/.test(cardNo.replace(/\D/g, ''))) {
                        Swal.fire({
                            title: 'Thông tin không hợp lệ',
                            text: 'Vui lòng nhập số thẻ 16 chữ số hợp lệ',
                            icon: 'warning',
                            confirmButtonText: 'Đồng ý',
                            confirmButtonColor: '#ffbe33',
                            showCloseButton: true
                        });
                        return false;
                    }

                    if (!/^\d{2}\/\d{2}$/.test(expiryDate)) {
                        Swal.fire({
                            title: 'Thông tin không hợp lệ',
                            text: 'Vui lòng nhập ngày theo định dạng MM/YY',
                            icon: 'warning',
                            confirmButtonText: 'Đồng ý',
                            confirmButtonColor: '#ffbe33',
                            showCloseButton: true
                        });
                        return false;
                    }

                    if (!/^\d{3}$/.test(cvv)) {
                        Swal.fire({
                            title: 'Thông tin không hợp lệ',
                            text: 'Vui lòng nhập mã CVV 3 chữ số hợp lệ',
                            icon: 'warning',
                            confirmButtonText: 'Đồng ý',
                            confirmButtonColor: '#ffbe33',
                            showCloseButton: true
                        });
                        return false;
                    }
                }

                // Existing AJAX submission code
                $.ajax({
                    url: $(this).attr('action'),
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function(response) {
                        if (response.success) {
                            Swal.fire({
                                title: response.title || 'Thành công',
                                text: response.text || 'Đặt hàng thành công!',
                                icon: 'success',
                                confirmButtonText: response.confirmButtonText || 'Đồng ý',
                                confirmButtonColor: '#ffbe33',
                                allowOutsideClick: false,
                                showCloseButton: false
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = response.redirectUrl || '/Home/Menu';
                                }
                            });
                        } else {
                            Swal.fire({
                                title: response.title || 'Lỗi',
                                text: response.text || 'Có lỗi xảy ra',
                                icon: 'error',
                                confirmButtonText: response.confirmButtonText || 'Đóng',
                                confirmButtonColor: '#ffbe33',
                                showCloseButton: true
                            });
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('Error:', error);
                        Swal.fire({
                            title: 'Lỗi hệ thống',
                            text: 'Có lỗi xảy ra khi xử lý đơn hàng',
                            icon: 'error',
                            confirmButtonText: 'Đóng',
                            confirmButtonColor: '#ffbe33',
                            showCloseButton: true
                        });
                    }
                });
            });
        });
    </script>
}

@if (TempData["ErrorMessage"] != null)
{
    <script>
        $(document).ready(function() {
            Swal.fire({
                title: 'Thông báo',
                text: '@TempData["ErrorMessage"]',
                icon: 'warning',
                confirmButtonText: 'Đồng ý',
                confirmButtonColor: '#ffbe33'
            }).then((result) => {
                window.location.href = '@Url.Action("Menu", "Home")';
            });
        });
    </script>
}
